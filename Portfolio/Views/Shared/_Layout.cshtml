<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <title>Portfolio</title>
    <meta name="description" content="S.E. Enterprises algorithmic trading API." />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/SiteCss")
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div ng-app="AlgoTrader">
            <div id="body">
                @RenderBody()
            </div>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - S.E. Plc.</p>
            </footer>
            <div id="scripts">
                <!-- Angular and other libraries/frameworks. -->
                @Scripts.Render("~/bundles/modernizr")
                @Scripts.Render("~/bundles/Angular")
                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/jqueryVal")
                @Scripts.Render("~/bundles/respond")
                @Scripts.Render("~/bundles/bootstrap")
                @Scripts.Render("~/bundles/toast")
                @Scripts.Render("~/bundles/highStock")
                @Scripts.Render("~/bundles/underScore")
                @Scripts.Render("~/bundles/angularApp")
                @Scripts.Render("~/bundles/angularModules")
                @Scripts.Render("~/bundles/angularDirectives")
                @Scripts.Render("~/bundles/angularServices")
                @Scripts.Render("~/bundles/angularControllers")
                @RenderSection("scripts", false)
            </div>
        </div>
    }
    else
    {
        <div ng-app="NoAuth">
            <div id="body">
                @RenderBody()
            </div>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - S.E. Plc.</p>
            </footer>
            <div id="scripts">
                <!-- Angular and other libraries/frameworks. -->
                @Scripts.Render("~/bundles/modernizr")
                @Scripts.Render("~/bundles/Angular")
                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/jqueryVal")
                @Scripts.Render("~/bundles/respond")
                @Scripts.Render("~/bundles/bootstrap")
                @Scripts.Render("~/bundles/toast")
                @Scripts.Render("~/bundles/highStock")
                @Scripts.Render("~/bundles/underScore")
                @Scripts.Render("~/Scripts/App/NoAuth.js")
                @Scripts.Render("~/Scripts/App/Controllers/NavigationController.js")
                @Scripts.Render("~/Scripts/App/Services/authenticationService.js")
                @Scripts.Render("~/Scripts/App/Controllers/AuthController.js")
                @RenderSection("scripts", false)
            </div>
        </div>
    }
</body>
</html>