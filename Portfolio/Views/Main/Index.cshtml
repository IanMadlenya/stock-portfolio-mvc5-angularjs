        </div>
    </div>
</div>
<div class="container body-content overlay">
    <div class="page-change" ng-view></div>
</div>

@if (@User.Identity.IsAuthenticated)
{
    <input id="antiForgeryToken" type="hidden" value="@GetAntiForgeryToken()" />
    @section scripts {
        <!--User scripts-->
        @Scripts.Render("~/bundles/angularApp")
        @Scripts.Render("~/bundles/angularModules")
        @Scripts.Render("~/bundles/angularDirectives")
        @Scripts.Render("~/bundles/angularServices")
        @Scripts.Render("~/bundles/angularControllers")
    }
}