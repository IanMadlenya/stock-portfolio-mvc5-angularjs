@functions{
    public string GetAntiForgeryToken()
    {
        string cookieToken, formToken;
        AntiForgery.GetTokens(null, out cookieToken, out formToken);
        return cookieToken + ":" + formToken;
    }
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <toaster-container></toaster-container>
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">AlgoTrader</a>
        </div>
        <div class="navbar-collapse collapse" ng-controller="NavigationController">
            <ul class="nav navbar-nav">
                <li class="dropdown" ng-class="{'active':getClass('/Main')}">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Main <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li ng-class="{'active':getClass('/Main/Home')}"><a href="#/Main/Home">Home</a></li>
                        <li ng-class="{'active':getClass('/Main/About')}"><a href="#/Main/About">About</a></li>
                    </ul>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="dropdown" ng-class="{'active':getClass('/Portfolio')}">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Portfolio <b class="caret"></b></a>
