@model Portfolio.Models.RegisterModel
@functions{

    /// <summary>
    /// The get anti forgery token.
    /// </summary>
    /// <returns>
    /// The <see cref="string"/>.
    /// </returns>
    private static string GetAntiForgeryToken()
    {
        string cookieToken, formToken;
        AntiForgery.GetTokens(null, out cookieToken, out formToken);
        return cookieToken + ":" + formToken;
    }

}
<h2>Register</h2>
<hr />
<form name="registerForm" ng-submit="register()" ng-controller="RegistrationController" novalidate>
    <input id="antiForgeryToken" ng-model="antiForgeryToken" type="hidden" ng-init='antiForgeryToken="@GetAntiForgeryToken()"' />
    <div>
        <label>User Name:</label>
        <input type="text" name="UserName" ng-model="registerModel.UserName" class="form-control" ng-minlength="5" ng-maxlength="20" required />
        <div class="field-validation-error" ng-show="registerForm.UserName.$dirty && registerForm.UserName.$invalid">
            <small class="field-validation-error" ng-show="registerForm.UserName.$error.required">
                Your name is required.
            </small>
            <small class="field-validation-error" ng-show="registerForm.UserName.$error.minlength">
                Your name is required to be at least 5 characters
            </small>
            <small class="field-validation-error" ng-show="registerForm.UserName.$error.maxlength">
                Your name cannot be longer than 20 characters
            </small>
        </div>
    </div>
    <div>
        <label>Password</label>
        <input type="password" name="Password" ng-model="registerModel.Password" class="form-control" ng-minlength="8" required />
        <div class="field-validation-error" ng-show="registerForm.Password.$dirty && registerForm.Password.$invalid">
            <small class="field-validation-error" ng-show="registerForm.Password.$error.required">Password is required.</small>
            <small class="field-validation-error" ng-show="registerForm.Password.$error.minlength">Password must be at least 8 chars.</small>
        </div>
    </div>
    <div>
        <label>Confirm Password</label>
        <input type="password" name="ConfirmPassword" ng-model="registerModel.ConfirmPassword" class="form-control" ng-minlength="8" required />
        <div class="field-validation-error" ng-show="registerForm.ConfirmPassword.$dirty && registerForm.ConfirmPassword.$invalid">
            <small class="field-validation-error" ng-show="registerForm.ConfirmPassword.$error.required">Password is required.</small>
            <small class="field-validation-error" ng-show="registerForm.ConfirmPassword.$error.minlength">Password must be at least 8 chars.</small>
        </div>
    </div>
    <br />
    <div>
        <input type="submit" value="Sign up" class="btn btn-primary" />
    </div>
</form>