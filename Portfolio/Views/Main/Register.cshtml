@model Portfolio.Models.RegisterModel
@functions{
    private static string GetAntiForgeryToken()
    {
        string cookieToken, formToken;
        AntiForgery.GetTokens(null, out cookieToken, out formToken);
        return cookieToken + ":" + formToken;
    }
}
<h2>Register</h2>
<hr />
<form ng-submit="register()" ng-controller="RegistrationController" novalidate>
    <input id="antiForgeryToken" ng-model="antiForgeryToken" type="hidden" ng-init='antiForgeryToken="@GetAntiForgeryToken()"' />
    <h4>Token</h4>
    <pre>{{antiForgeryToken}}</pre>
    <div>
        @Html.LabelFor(m => m.UserName)
        <input type="text" name="UserName" ng-model="registerModel.UserName" class="form-control" />
    </div>
    <div>
        @Html.LabelFor(m => m.Password)
        <input type="password" name="Password" ng-model="registerModel.Password" class="form-control" />
    </div>
    <div>
        @Html.LabelFor(m => m.ConfirmPassword)
        <input type="password" name="ConfirmPassword" ng-model="registerModel.ConfirmPassword" class="form-control" />
    </div>
    <br />
    <div>
        <input type="submit" value="Sign up" class="btn btn-primary" />
    </div>
</form>